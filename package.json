{
  "name": "@init-kz/ui",
  "version": "0.0.0",
  "description": "Library from init.kz",
  "homepage": "https://init.kz/en",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/init-pkg/init-ui.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    "./swiper": {
      "types": "./dist/swiper/index.d.ts",
      "import": "./dist/swiper/index.js",
      "require": "./dist/swiper/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "format": "prettier --write .",
    "serve": "http-server -p 8080",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "tscheck": "sh ./config/linting/tscheck.sh",
    "release": "release-it",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "INIT.KZ"
  ],
  "author": "INIT.KZ",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Sauyrbai Imangali",
      "url": "https://github.com/Imangali-Sauyrbay"
    },
    {
      "name": "Vadim S.",
      "url": "https://github.com/init-vadim"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.27.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jiti": "^2.4.2",
    "lefthook": "^1.11.13",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.2",
    "sass": "^1.89.0",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.33.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/init-pkg/init-ui/issues"
  },
  "peerDependencies": {
    "clsx": "^2.1.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.0"
  }
}
